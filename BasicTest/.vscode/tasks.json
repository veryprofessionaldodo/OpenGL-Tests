{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile OpenGL",
            "type": "shell",
            "command": "g++ -lX11 -I/include/** -lpthread -lXrandr -lXi -ldl -lglut -lGL -lglfw -lGLU -lGLEW src/*.cpp -o Application",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Run OpenGL Application",
            "type": "shell",
            "command": "primusrun ./Application",
            "problemMatcher": [],
            "group": "build"
        }
    ]
}